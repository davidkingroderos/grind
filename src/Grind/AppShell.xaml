<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Grind.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Grind"
    xmlns:view="clr-namespace:Grind.View"
    Shell.FlyoutBehavior="{OnPlatform Android=Flyout,
                                      iOS=Flyout,
                                      MacCatalyst=Locked,
                                      WinUI=Locked}"
    Shell.NavBarIsVisible="{OnPlatform WinUI=False,
                                       Default=True}"
    Shell.TabBarIsVisible="True">

    <FlyoutItem Title="Tracker">
        <ShellContent
            Title="Tracker"
            ContentTemplate="{DataTemplate view:TrackersPage}"
            Route="TrackersPage" />
        <ShellContent
            Title="Tasks"
            ContentTemplate="{DataTemplate view:TasksPage}"
            Route="Tasks" />
        <ShellContent
            Title="Tools"
            ContentTemplate="{DataTemplate view:ToolsPage}"
            Route="ToolsPage" />
        <ShellContent
            Title="Routines"
            ContentTemplate="{DataTemplate view:RoutinesPage}"
            Route="RoutinesPage" />
    </FlyoutItem>

    <FlyoutItem Title="About" Shell.TabBarIsVisible="False">
        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate view:AboutPage}"
            Route="AboutPage" />
    </FlyoutItem>

</Shell>
