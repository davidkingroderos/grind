<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Grind.View.TasksPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:Grind.ViewModel"
    Title="Tasks"
    x:DataType="viewmodel:TasksViewModel">
    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding GoToAddTaskCommand}" IconImageSource="{AppThemeBinding Light=circle_plus_light.svg, Dark=circle_plus_dark.svg}" />
    </ContentPage.ToolbarItems>
    <VerticalStackLayout>
        <Label
            HorizontalOptions="Center"
            Text="Welcome to Tasks"
            VerticalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>