<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Grind.Views.ToolsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:Grind.ViewsModels"
    Title="Tools"
    x:DataType="viewmodel:ToolsViewModel">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="{AppThemeBinding Light=circle_plus_light.svg, Dark=circle_plus_dark.svg}" />
    </ContentPage.ToolbarItems>

    <VerticalStackLayout>
        <Label
            HorizontalOptions="Center"
            Text="Welcome to Tools"
            VerticalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>